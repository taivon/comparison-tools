# Local Development Environment Variables
# Copy this file to .env and update with your actual values

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here

# Google OAuth2 Credentials (get these from Google Cloud Console)
GOOGLE_OAUTH2_KEY=your-google-client-id-here.apps.googleusercontent.com
GOOGLE_OAUTH2_SECRET=your-google-client-secret-here

# Database: SQLite for Django admin/auth, Firestore for app data
DATABASE_URL=

# App Engine URL (for production)
APPENGINE_URL=https://apartments.comparison.tools

# Stripe Configuration (for local development - use TEST/SANDBOX keys)
# In production, these are automatically fetched from Google Secret Manager
# See STRIPE_SETUP.md for detailed setup instructions

# Feature flag to enable/disable Stripe checkout (set to False to hide subscription features)
STRIPE_ENABLED=False

# Get your test keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Get webhook secret from: https://dashboard.stripe.com/test/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Get price IDs from: https://dashboard.stripe.com/test/products
STRIPE_MONTHLY_PRICE_ID=price_your_monthly_price_id_here
STRIPE_ANNUAL_PRICE_ID=price_your_annual_price_id_here

# Display prices (must match what you set in Stripe Dashboard)
STRIPE_MONTHLY_PRICE_AMOUNT=5
STRIPE_ANNUAL_PRICE_AMOUNT=50