{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Django: Run Server",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/python",
            "args": [
                "manage.py",
                "runserver"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "DJANGO_SETTINGS_MODULE": "config.settings"
                }
            }
        },
        {
            "label": "Django: Run Migrations",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/python",
            "args": [
                "manage.py",
                "migrate"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "DJANGO_SETTINGS_MODULE": "config.settings"
                }
            }
        },
        {
            "label": "Django: Make Migrations",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/python",
            "args": [
                "manage.py",
                "makemigrations"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "DJANGO_SETTINGS_MODULE": "config.settings"
                }
            }
        },
        {
            "label": "Django: Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/python",
            "args": [
                "manage.py",
                "test",
                "--verbosity=2"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "DJANGO_SETTINGS_MODULE": "config.settings"
                }
            }
        },
        {
            "label": "Install Python Dependencies",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/pip",
            "args": [
                "install",
                "-r",
                "requirements.txt"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}